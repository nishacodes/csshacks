<div class="container">
  
  <!-- TITLE -->
  <div class="col-md-12"> 
    <h2> <%= hack.title.upcase %></h2>

  </div>
  <div class="btn-group center-block">
    <button href=".hack" type="button" data-toggle="tab" class="btn btn-default tab">Hack</button>
    <button href=".code" type="button" data-toggle="tab" class="btn btn-default tab">Code</button>
  </div>


  <!-- Nav tabs -->

  <ul class="nav nav-tabs">
    <ul class="nav nav-tabs navbar-right">
      <li><a> <%= "Created by: #{hack.user.first_name}" %></a></li>
      <li><a> <%= button_to 'Destroy', hack, confirm: 'Are you sure?', method: :delete %></a></li>
      <!-- <li><a href="#html" data-toggle="tab">HTML</a></li> -->
    </ul>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <!-- RESULTS -->
    <div class="tab-pane active hack">
      <!-- HTML FOR ENTRY HERE -->
      <div class="style-container">
        <%= hack.html.html_safe %>
      </div>
      <!-- CSS FOR ENTRY HERE -->
      <style>
        .style-container { <%= hack.css %>}
      </style>
       
    </div>
    
    <!-- CODE  -->
    <div class="tab-pane code">
      <div class="col-md-6"> 
        <h4> CSS </h4>
        <pre class="prettyprint"> 
          <%= hack.css %>
        </pre>
      </div>
      <div class="col-md-6"> 
        <h4> HTML </h4>
        <pre class="prettyprint"> 
          <%= hack.html_display.html_safe %>
        </pre>
      </div>
    </div>
  </div>
</div>
