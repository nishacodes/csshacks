<h1>Listing hacks</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Css</th>
    <th>Html</th>
    <th>Html display</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @hacks.each do |hack| %>
  <tr>
    <td><%= hack.title %></td>
    <td><%= hack.css %></td>
    <td><%= hack.html %></td>
    <td><%= hack.html_display %></td>
    <td><%= link_to 'Show', hack %></td>
    <td><%= link_to 'Edit', edit_hack_path(hack) %></td>
    <td><%= button_to 'Destroy', hack, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

