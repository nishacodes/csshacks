  <!-- Button trigger modal -->
  <ul class="nav navbar-nav navbar-right nav-main">
      
      <li><a href="/#css-carousel" class="active">Gallery</a></li>
      <li><a href="#">Categories</a></li>
      <li><a href="#">About</a></li>
      
    <% if user_signed_in? %>
      <li>
        <%= link_to "New Hack", "#", "data-toggle" => "modal", "data-target"=>"#myModal" %>
      </li>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" >
          <%= "Hi, #{current_user.first_name}" %>
           <b class="caret"></b>
        </a>
        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
          <li><a href="/users/<%= current_user.id%>">My Hacks</a></li>
          <li><a href="#">Another action</a></li>
          <li><a href="#">Something else here</a></li>
          <li class="divider"></li>
          <li><a href="#">Separated link</a></li>
          <li class="divider"></li>
          <li><%= button_to "Logout", destroy_user_session_path, method: :delete %> </li>
        </ul>
      </li>

    <% else %>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" >
          Sign in <b class="caret"></b>
        </a>
        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
          
          <div class="tab-content">
            <div class="tab-pane active" id="signin">
              <%= render 'users/sessions/new' %>
              <a href="#signup" data-toggle="tab">Sign up</a>
            </div>
            <div class="tab-pane" id="signup">
              <%= render 'users/registrations/new' %>
              <a href="#signin" data-toggle="tab">Sign in</a>
            </div>
          </div>

          
          
        </ul>
